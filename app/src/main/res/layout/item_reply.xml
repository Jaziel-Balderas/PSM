<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingStart="40dp"
    android:paddingEnd="8dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:background="?attr/selectableItemBackground">

    <!-- Línea vertical para mostrar anidación -->
    <View
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="12dp"
        android:background="#E0E0E0"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header con usuario y tiempo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivUserProfile"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/perfilejemplo"
                app:civ_border_width="1dp"
                app:civ_border_color="#CCCCCC"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="8dp">

                <TextView
                    android:id="@+id/tvUsername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Usuario"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/tvDateTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="24 Nov 2025, 14:30"
                    android:textColor="#888888"
                    android:textSize="9sp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Texto de la respuesta -->
        <TextView
            android:id="@+id/tvReplyText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Esta es una respuesta al comentario"
            android:textColor="@color/black"
            android:textSize="13sp"/>

    </LinearLayout>
</LinearLayout>
