<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".RegisterActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scrollbars="none"> <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="24dp"
        android:paddingTop="16dp"
        android:paddingBottom="40dp">

        <Button
            android:id="@+id/back_buttonLoginReg"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="start"
            android:layout_marginTop="20dp"
            android:background="@drawable/back_button"
            android:gravity="center"
            android:includeFontPadding="false"
            android:padding="0dp"
            android:text="@string/Flecha"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:backgroundTint="@color/boton_background" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_gravity="center_horizontal"
            android:text="Crea tu Cuenta"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"
            android:text="Ingresa tus datos personales"
            android:textColor="#CCCCCC"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/textName"
            style="@style/TextAppearance.MaterialComponents.Subtitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Nombre"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/NameBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@drawable/edittext_diseno"
            android:hint="Jaziel Alan"
            android:inputType="textPersonName|textCapWords"
            android:padding="12dp"
            android:textColorHint="#99FFFFFF"
            android:textSize="16sp"
            android:nextFocusDown="@id/LastNameBox" />

        <TextView
            android:id="@+id/textLastName"
            style="@style/TextAppearance.MaterialComponents.Subtitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Apellidos"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/LastNameBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@drawable/edittext_diseno"
            android:hint="Balderas Escobedo"
            android:inputType="textPersonName|textCapWords"
            android:padding="12dp"
            android:textColorHint="#99FFFFFF"
            android:textSize="16sp"
            android:nextFocusDown="@id/PasswordBox" />

        <TextView
            android:id="@+id/textPassword"
            style="@style/TextAppearance.MaterialComponents.Subtitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Contraseña"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/PasswordBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@drawable/edittext_diseno"
            android:hint="Mínimo 8 caracteres"
            android:inputType="textPassword"
            android:padding="12dp"
            android:textColorHint="#99FFFFFF"
            android:textSize="16sp"
            android:nextFocusDown="@id/MailBox" />

        <TextView
            android:id="@+id/textMail"
            style="@style/TextAppearance.MaterialComponents.Subtitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Correo Electrónico"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/MailBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@drawable/edittext_diseno"
            android:hint="ejemplo@dominio.com"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:textColorHint="#99FFFFFF"
            android:textSize="16sp"
            android:nextFocusDown="@id/PhoneBox" />

        <TextView
            android:id="@+id/textPhone"
            style="@style/TextAppearance.MaterialComponents.Subtitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Teléfono"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/PhoneBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@drawable/edittext_diseno"
            android:hint="81 0000 0000"
            android:inputType="phone"
            android:padding="12dp"
            android:textColorHint="#99FFFFFF"
            android:textSize="16sp"
            android:nextFocusDown="@id/AddressBox" />

        <TextView
            android:id="@+id/textDireccion"
            style="@style/TextAppearance.MaterialComponents.Subtitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Dirección"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/AddressBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@drawable/edittext_diseno"
            android:hint="Calle, número, colonia"
            android:inputType="textPostalAddress"
            android:padding="12dp"
            android:textColorHint="#99FFFFFF"
            android:textSize="16sp"
            android:nextFocusDown="@id/NickNameBox" />

        <TextView
            android:id="@+id/textNickName"
            style="@style/TextAppearance.MaterialComponents.Subtitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Alias (Nombre de Usuario)"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/NickNameBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@drawable/edittext_diseno"
            android:hint="Jazz07"
            android:inputType="text"
            android:padding="12dp"
            android:textColorHint="#99FFFFFF"
            android:textSize="16sp"
            android:imeOptions="actionDone" />


        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/pics"
            android:scaleType="centerCrop"
            android:src="@drawable/picture" />

        <Button
            android:id="@+id/register_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:paddingVertical="14dp"
            android:text="REGISTRARME"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="@color/boton_background"
            android:textColor="@color/black" />

    </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>