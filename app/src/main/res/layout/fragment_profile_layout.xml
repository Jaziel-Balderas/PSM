<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".UI.Fragments.ProfileLayout">

    <!-- ðŸ“¸ Imagen de portada -->

    <!-- âœï¸ BotÃ³n para editar perfil -->
    <View
        android:id="@+id/portada"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:background="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnEditarPerfil"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:background="@android:color/white"
        android:src="@drawable/borrador"
        android:scaleType="fitCenter"
        android:contentDescription="Editar perfil"
        app:layout_constraintTop_toTopOf="@id/portada"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ðŸ§‘ Foto de perfil (circular, superpuesta sobre la portada) -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/fotoPerfil"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="-50dp"
        android:elevation="50dp"
        android:alpha="1.0"
        app:civ_border_color="@color/white"
        app:civ_border_width="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/portada" />

    <!-- ðŸ§¾ Nombre de usuario -->
    <TextView
        android:id="@+id/txtNombreUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:background="@android:color/white"
        android:padding="4dp"
        android:elevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/fotoPerfil"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp" />

    <!-- ðŸ’¬ DescripciÃ³n corta o biografÃ­a -->

    <!-- ðŸ”˜ Barra de iconos: publicaciones, guardados, likes -->
    <LinearLayout
        android:id="@+id/layoutOpciones"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="330dp">

    </LinearLayout>

    <!-- ðŸ§± SecciÃ³n donde aparecerÃ¡n las publicaciones -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewUserPosts"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNombreUsuario"
        tools:listitem="@layout/item_post" />
    
    <ProgressBar
        android:id="@+id/progressBarProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNombreUsuario" />

</androidx.constraintlayout.widget.ConstraintLayout>
